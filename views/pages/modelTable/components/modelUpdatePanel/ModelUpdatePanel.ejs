          return;
        }
      }
<%}-%>
      return;
    }//end: case '<%- sortedAssociations[i].targetModel _%>'
<%}-%>
  }

<%if(hasManysArr.length > 0) {-%>

  const handleTransferToRemove = (associationKey, itemId) => {
