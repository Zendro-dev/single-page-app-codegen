<%for( i=0; i<sortedAssociations.length; i++ ){
  if(sortedAssociations[i].type === "to_many") {
-%>
    if(associationKey === '<%- sortedAssociations[i].targetModel _%>') {
      for(var i=0; i<<%- sortedAssociations[i].targetModelPlLc _%>IdsToRemove.current.length; ++i)
      {
        if(<%- sortedAssociations[i].targetModelPlLc _%>IdsToRemove.current[i] === itemId) {
          <%- sortedAssociations[i].targetModelPlLc _%>IdsToRemove.current.splice(i, 1);
          return;
        }
      }
