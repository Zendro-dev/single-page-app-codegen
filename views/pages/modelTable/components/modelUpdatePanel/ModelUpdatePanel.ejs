        setForeignKeys({...foreignKeys, <%- sortedAssociations[i].foreignKey _%>: itemId});
<%} else {-%>
        <%- sortedAssociations[i].targetModelPlLc _%>IdsToAdd.current.push(itemId);
<%}-%>
        break;
<%}-%>

