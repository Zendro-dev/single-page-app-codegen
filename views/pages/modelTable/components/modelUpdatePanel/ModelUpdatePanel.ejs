<%}-%>
    return false;
  }

  function doSave(event) {
    //variables
    let keys = Object.keys(values.current);
    let variables = {};
    for(var i=0; i<keys.length; i++) {
      if(values.current[keys[i]] !== null && valuesOkRefs.current[keys[i]] === 1) {
        variables[keys[i]] = values.current[keys[i]];
      }
    }
    //id
    variables.id = item.id;

    //addItems
<%for( i=0; i<sortedAssociations.length; i++ ){
  if(sortedAssociations[i].type === "to_many") {
-%>
    variables.add<%- sortedAssociations[i].targetModelPlCp %> = <%- sortedAssociations[i].targetModelPlLc _%>IdsToAdd.current;
<%}}-%>

    //removeItems
<%for( i=0; i<sortedAssociations.length; i++ ){
  if(sortedAssociations[i].type === "to_many") {
